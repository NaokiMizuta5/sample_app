<h1>編集画面</h1>
<%= form_with model: @list, url: update_list_path(@list.id), method: :patch do |f| %>
    
    <!--show.htmlと違うのはこちらはフォーム内に置き換えている点-->
    <!--show.htmlはそのまま表示するだけ-->
    
    <h4>タイトル</h4>
    <%= f.text_field :title %>

    <h4>本文</h4>
    <%= f.text_area :body %>
    
    <%= f.submit '保存'%>
<% end %>